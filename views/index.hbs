    <div class="modal-content">
      <span class="close" onclick="cerrarModalPago()">&times;</span>
      <h5 class="modal-title">Total a Pagar</h5>
      <p id="totalAPagar"></p>
      <button type="button" class="btn btn-primary" onclick="realizarPago()">Ir a Mercado Pago</button>
    </div>
  </div> --}}

<script src="/javascripts/app.js"></script>

</body>
</html>
